{
	"name": "cfsg-website",
	"description": "Cofounders Pte Ltd Website",
	"private": true,
	"version": "1.0.0",
	"homepage": "https://cf.sg",
	"repository": "github:cofounders/website",
	"license": "GPL-3.0-only",
	"author": "Sebastiaan Deckers <sebdeckers83@gmail.com>",
	"dependencies": {
		"cpy-cli": "^2.0.0",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.3",
		"stylus": "^0.54.5"
	},
	"scripts": {
		"test": "echo Warning: No tests specified",
		"clean": "rimraf public",
		"prebuild": "npm it && npm run clean",
		"build": "npm run build-assets && npm run build-stylus",
		"build-assets": "cpy --no-overwrite --parents --cwd=source '**/*.{html,txt,jpg,png,svg,eot,ttf,woff}' '../public'",
		"build-stylus": "mkdirp public/styles && stylus source/styles/app.styl --out public/styles",
		"predeploy": "npm run build",
		"deploy": "commonshost deploy"
	}
}
