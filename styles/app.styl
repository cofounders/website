@import 'fonts'

@import 'mixins/malarkey'
@import 'mixins/nib'

@import 'mixins/normalize'
global-normalize()

@import 'variables'

color-palette(border, nav, heading, text, highlight)
	border-top-color border
	header
		h1
			border-color nav
			color nav
		a
			color nav
			&.selected
				color highlight
				border-bottom-color highlight
	article
		h2
			color heading
		a
			highlight
		p
			color text

slide(bg, tile = repeat)
	background-image url(../img/overlay.png), url(bg)
	background-repeat repeat, tile

html,
body
	font-family 'Gentium Book Basic', serif
	font-weight 100
	height 100%

h1
	font-family 'League Gothic CFSG', sans-serif
	font-weight 100

h2
	font-family LeagueGothicRegular, sans-serif
	font-weight 100
	
p
	color lighten($black,50%)
	font-size 1.2em

