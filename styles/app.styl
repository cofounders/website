header
	padding 1em 0
	position absolute
	width 100%
	
	> div
		clear both
		margin 0 auto
		max-width 1400px
		width 80%
	
	h1
		border 3px solid #000
		float left
		font-size 3.5em
		margin 0
		padding 3px 20px 0
		text-transform uppercase
		span
			text-transform lowercase
	
	nav
		height 100%
		float right		
		a

			font-family LeagueGothicRegular, sans-serif
			font-size 1.5em
			line-height 3.5em
			margin 0 0.5em
			vertical-align middle
			text-decoration none
			text-transform uppercase
			&.selected
				border-bottom-style solid
				border-bottom-width 2px
	
section
	background-attachment fixed
	background-position center 60%
	border-top-style solid
	border-top-width 3px
	min-height 100%
	overflow hidden
	position relative

	article
		margin 8em auto 0
		max-width 1280px
		position relative
		width 70%
		
		h2
			font-size 4.5em
			font-weight normal

	&.intro
		border none
		color-palette($black, $black, $black, $white, $white)
		slide('../img/bg_ingenuity.jpg', no-repeat)
	&.about
		color-palette($orange, $black, $orange, lighten($black,50%), $orange)
		slide('../img/bg_white.jpg')
	&.discover
		color-palette($purple, $white, $purple, $white, $purple)
		slide('../img/bg_blue.jpg')
	&.design
		color-palette($green, $white, $green, $white, $green)
		slide('../img/bg_purple.jpg')
	&.develop
		color-palette($yellow, $white, $yellow, $white, $yellow)
		slide('../img/bg_red.jpg')
	&.support
		color-palette(lighten($black,50%),$white, $red, $white, $red)
		slide('../img/bg_mvp.jpg', no-repeat)
	&.team
		color-palette($purple, $black, $purple, lighten($black,50%),$purple)
		slide('../img/bg_white.jpg')
	&.contact
		color-palette($orange, $white, $white, $orange, $orange)
		slide('../img/bg_team.jpg', no-repeat)

footer
	border-top 2px solid #fff
	color #fff
	clear both
	margin -3.5em auto 0
	max-width 1400px
	opacity 0.7
	width 80%
	
	div
		&.copyright
			border-left 1px solid #fff
			float right
			height 2.5em
			line-height 2.5em
			margin 0
			padding 0 20px